<Window x:Class="AppTaskManager.Views.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTaskManager.Views" 
        xmlns:utils="clr-namespace:AppTaskManager.Utilities"
        mc:Ignorable="d"
        Title="Редактор задачи" Height="830" Width="800"
        MinHeight="680" MinWidth="600">
    <Window.Resources>
        <Storyboard x:Key="EmergingOnLoad">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0"
                             Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideFromTop">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                            From="0 0 0 100" To="0 0 0 0"
                            Duration="0:0:1">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideFromBottom">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                            From="0 100 0 0" To="0 0 0 0"
                            Duration="0:0:1">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideFromRight">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                            From="500 5 0 0" To="20 5 0 0"
                            Duration="0:0:1">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="130" />
        </Grid.RowDefinitions>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Storyboard="{StaticResource EmergingOnLoad}"/>
            </EventTrigger>
        </Grid.Triggers>
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.RowSpan="6"/>

        <!--First row-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>
            <!--Title-->
            <TextBox x:Name="TaskTitle" Grid.Column="0"
                     Style="{StaticResource TaskTitleBox}"
                     BorderBrush="{StaticResource Borders}"
                     FontSize="14"
                     Text="{Binding TaskModel.Title}"/>
            <Label IsHitTestVisible="False" 
                   Grid.Column="0"
                   Foreground="{StaticResource PlaceholderText}"
                   Content="Введите наименование задачи..."
                   VerticalAlignment="Center"
                   FontSize="14"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="30 10"/>
            <!--Importance Combo Box-->
            <ComboBox x:Name="ComboBoxImportance"
                      Style="{StaticResource TaskComboBox}"
                      Grid.Column="1"
                      SelectedIndex="{Binding TaskModel.TaskImportance, Converter={StaticResource TaskImportanceToIntConverter}}"
                      ItemsSource="{Binding TaskImportancies}"
                      SelectedItem="{Binding TaskModel.TaskImportance}"/>
            <!--Category Combo Box-->
            <ComboBox x:Name="ComboBoxCategory"
                      Style="{StaticResource TaskComboBox}"
                      Grid.Column="2"
                      ItemsSource="{Binding TaskCategories}"
                      SelectedIndex="{Binding TaskModel.TaskCategory, Converter={StaticResource TaskCategoryToIntConverter}}"
                      SelectedItem="{Binding TaskModel.TaskCategory}"/>
        </Grid>

        <!--Second row-->
        <Grid Grid.Row="1">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SlideFromTop}"/>
                </EventTrigger>
            </Grid.Triggers>
            <!--Task Description Box-->
            <TextBox x:Name="TaskDesc"
                 Style="{StaticResource TaskDecrBox}"
                 VerticalContentAlignment="Top"
                 HorizontalContentAlignment="Left"
                 Text="{Binding TaskModel.Description}"/>
            <Label IsHitTestVisible="False" 
               Foreground="{StaticResource PlaceholderText}"
               Content="Введите описание задачи..."
               VerticalAlignment="Top"
               Visibility="{Binding Text.IsEmpty, ElementName=TaskDesc, Converter={StaticResource BooleanToVisibilityConverter}}"
               Margin="30,5,30,0" Grid.ColumnSpan="2"/>
        </Grid>

        <!--Third row-->
        <!--CheckItem-->
        <TextBox x:Name="TaskCheckBox" 
                 Grid.Row="2"
                 Style="{StaticResource TaskTitleBox}"
                 BorderBrush="{StaticResource Borders}"
                 Margin="20 10 80 10"
                 FontSize="12"
                 Text="{Binding CheckDescription}"/>
        <Label IsHitTestVisible="False" 
               Grid.Row="2" 
               Foreground="{StaticResource PlaceholderText}"
               Content="Введите название точки контроля выполнения задачи..."
               FontSize="14"
               VerticalAlignment="Center"
               Visibility="{Binding Text.IsEmpty, ElementName=TaskCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}"
               Margin="30 10"/>
        <!--Add New Task button-->
        <Button Grid.Row="2"
                Style="{StaticResource RoundAccentButton}"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Height="30"
                Width="30"
                Margin="0 0 20 0"
                Background="Green"
                Command="{Binding IAddControlCheck}">
            <!--New Task Icon-->
            <Viewbox Width="20" Height="30">
                <Path Data="{StaticResource AddIcon}" Fill="{StaticResource OnAccent}"/>
            </Viewbox>
        </Button>

        <!--Fourth row-->
        <Grid Grid.Row="3">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SlideFromBottom}"/>
                </EventTrigger>
            </Grid.Triggers>
            <!--List of task check-->
            <ListView x:Name="TaskList" Style="{StaticResource ListCheckBox}"
                      ItemsSource="{Binding TaskCheckList}"
                      SelectionChanged="TaskList_Selected">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Description}" 
                                       Foreground="{StaticResource DefaultText}"
                                       TextWrapping="Wrap"
                                       MinWidth="450"
                                       MaxWidth="600"
                                       Margin="5 0 20 0"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListView>
        </Grid>

        <!--Fifth row-->
        <Grid Grid.Row="4">
            <Button Content="Remove check"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Style="{StaticResource TaskViewDeleteButton}"
                    Margin="0 0 10 0"
                    HorizontalContentAlignment="Center"
                    Command="{Binding IRemoveTaskCheck}"/>
        </Grid>

        <!--Sixth row-->
        <!--Enter DateTime-->
        <StackPanel Grid.Row="5" Orientation="Horizontal"
                        Margin="20 5"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left">
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SlideFromRight}"/>
                </EventTrigger>
            </StackPanel.Triggers>
            <TextBlock Text="Выполнить до: "
                    Margin="0 0 20 0"
                    VerticalAlignment="Center"/>
            <DatePicker Margin="0 0 20 0" 
                        Width="150"
                        SelectedDate="{Binding TaskModel.EndTime}"/>
        </StackPanel>

        <!--Seventh row-->
        <Grid Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="20 0">
                <CheckBox VerticalAlignment="Center"></CheckBox>
                <Label VerticalAlignment="Center" 
                       Content="Подключить таймер к выполнению задачи"
                       Margin="20 0"></Label>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="20 0">
                <CheckBox VerticalAlignment="Center"></CheckBox>
                <Label VerticalAlignment="Center" 
                       Content="Добавить задачу в календарь"
                       Margin="20 0"></Label>
            </StackPanel>
            <Button Grid.Row="2"
                    Content="Отмена"
                    HorizontalContentAlignment="Center"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Style="{StaticResource TaskViewEditButton}"
                    Margin="10 0 0 10"
                    Command="{Binding IClearTask}"/>
            <Button Grid.Row="2" 
                    Content="Сохранить задачу"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Style="{StaticResource TaskViewCompleteButton}"
                    Margin="0 0 10 10"
                    Command="{Binding IAddNewTask}"/>
        </Grid>
    </Grid>
</Window>
