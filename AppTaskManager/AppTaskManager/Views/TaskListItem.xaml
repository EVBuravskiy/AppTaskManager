<UserControl x:Class="AppTaskManager.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppTaskManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="145" d:DesignWidth="420">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <!--Task Title-->
        <TextBlock Text="{Binding Title, FallbackValue=Наименование задачи}" 
                   Style="{StaticResource Title}" 
                   VerticalAlignment="Center"
                   Margin="20 0 "/>
        <!--Category Badge-->
        <Border HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Padding="40 0"
                Margin="10 0"
                Background="{StaticResource AccentDark}"
                CornerRadius="5">
            <TextBlock Text="{Binding TaskCategory, FallbackValue=Категория}"
                       Foreground="White"
                       FontWeight="Normal"
                       FontSize="16"/>
        </Border>
        <!--Description Scroll Viewer-->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <!--Description-->
            <TextBlock Text="{Binding Description, FallbackValue=Описание задачи}"
                       TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="{StaticResource DefaultText}"
                       Margin="20 5 0 0"/>
        </ScrollViewer>
        <!--Date-->
        <TextBlock Text="{Binding CreateDateTime, FallbackValue=01.08.2025}"
                           Background="Transparent"
                           Padding="20 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           Foreground="{StaticResource DefaultText}"/>
    </Grid>
</UserControl>
