<UserControl x:Class="AppTaskManager.Views.UserControllers.TaskItemSmallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppTaskManager.Views.UserControllers"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="230">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <!--Category Badge-->
            <Border HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Padding="5 0 5 0"
                Margin="10 5"
                Background="{Binding TaskImportance, Converter={StaticResource ColorConverter}}"
                CornerRadius="5">
                <TextBlock Text="{Binding TaskImportance, Converter={StaticResource EnumDescriptionConverter}, FallbackValue=Importance}"
                       Foreground="White"
                       FontWeight="Normal"
                       FontSize="12"/>
            </Border>
        <!--Task Title-->
        <TextBlock Grid.Row="1" Text="{Binding Title, FallbackValue=TaskTitle}" 
                   Style="{StaticResource Title}" 
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="20 0 "/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <!--Date-->
            <TextBlock Text="{Binding EndTime, FallbackValue=01/01/2000, StringFormat=dd/MM/yyyy}"
                   Background="Transparent"
                   Padding="20 3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Grid.Column="0"
                   Foreground="{StaticResource DefaultText}"/>
            <Border Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Padding="5 0 5 0"
                Margin="10 5"
                Background="{Binding TaskState, Converter={StaticResource ColorConverter}}"
                CornerRadius="5">
                <TextBlock Text="{Binding TaskState, Converter={StaticResource EnumDescriptionConverter}, FallbackValue=State}"
                       Foreground="White"
                       FontWeight="Normal"
                       FontSize="10"/>
            </Border>

        </Grid>
    </Grid>
</UserControl>
