<UserControl x:Class="AppTaskManager.Views.UserControllers.TaskItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppTaskManager.Views.UserControllers"
             mc:Ignorable="d" 
              d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <!--Task Title-->
        <TextBlock Text="{Binding Title, FallbackValue=TaskTitle}" 
                   Style="{StaticResource Title}" 
                   VerticalAlignment="Center"
                   Margin="20 0 "/>
        <!--Category Badge-->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <Border HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Padding="40 5 40 5"
                Margin="10 5"
                Background="{Binding TaskImportance, Converter={StaticResource ColorConverter}}"
                CornerRadius="5">
                <TextBlock Text="{Binding TaskImportance, Converter={StaticResource EnumDescriptionConverter}, FallbackValue=Importance}"
                       Foreground="White"
                       FontWeight="Normal"
                       FontSize="16"/>
            </Border>
            <Border HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Padding="40 5 40 5"
                Margin="10 5"
                Background="{Binding TaskCategory, Converter={StaticResource ColorConverter}}"
                CornerRadius="5">
                <TextBlock Text="{Binding TaskCategory, Converter={StaticResource EnumDescriptionConverter}, FallbackValue=Category}"
                       Foreground="White"
                       FontWeight="Normal"
                       FontSize="16"/>
            </Border>
        </StackPanel>
        <!--Description Scroll Viewer-->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <!--Description-->
            <TextBlock Text="{Binding Description, FallbackValue=TaskDescription}"
                       TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="{StaticResource DefaultText}"
                       Margin="20 5 0 0"/>
        </ScrollViewer>
        <!--Date-->
        <TextBlock Text="{Binding CreationTime, FallbackValue=01/01/2000}"
                           Background="Transparent"
                           Padding="20 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           Foreground="{StaticResource DefaultText}"/>
    </Grid>
</UserControl>
