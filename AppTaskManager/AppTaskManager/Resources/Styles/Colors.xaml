<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--App Accent Dark-->
    <SolidColorBrush x:Key="AccentDark" Color="LightSlateGray"/>

    <SolidColorBrush x:Key="AccentDarkOver" Color="DimGray"/>

    <SolidColorBrush x:Key="AccentDarkClick" Color="LightGray"/>


    <!--Task List Background-->
    <SolidColorBrush x:Key="TaskListBackground" Color="LightGray"/>
    <!--Task View Background-->
    <SolidColorBrush x:Key="WindowBackground" Color="White"/>
    <!--Task Status Background-->
    <SolidColorBrush x:Key="TaskStatusBackground" Color="#FFF6F6F6"/>
    <!--Default Text Color-->
    <SolidColorBrush x:Key="DefaultText" Color="DimGray"/>
    <!--On Accent-->
    <SolidColorBrush x:Key="OnAccent" Color="WhiteSmoke"/>
    <!--Borders-->
    <SolidColorBrush x:Key="Borders" Color="#FFCCCCCC"/>
    <!--Placeholder Text Color-->
    <SolidColorBrush x:Key="PlaceholderText" Color="SlateGray"/>

    <!--Navigation Buttons-->
    <SolidColorBrush x:Key="NavButton.Default" Color="Transparent"/>
    <SolidColorBrush x:Key="NavButton.Over" Color="DimGray" />
    <SolidColorBrush x:Key="NavButton.Click" Color="LightGray" />

    <!--Task Button Colors-->
    <!--Complete Button-->
    <SolidColorBrush x:Key="Button.Complete" Color="Green"/> 
    <SolidColorBrush x:Key="Button.Complete.Over" Color="DarkGreen"/>
    <SolidColorBrush x:Key="Button.Complete.Click" Color="LightGreen"/>
    <!--Edit Button-->
    <SolidColorBrush x:Key="Button.Edit" Color="LightSlateGray"/>
    <SolidColorBrush x:Key="Button.Edit.Over" Color="DimGray"/>
    <SolidColorBrush x:Key="Button.Edit.Click" Color="LightGray"/>
    <!--Delete Button-->
    <SolidColorBrush x:Key="Button.Delete" Color="Red"/>
    <SolidColorBrush x:Key="Button.Delete.Over" Color="DarkRed"/>
    <SolidColorBrush x:Key="Button.Delete.Click" Color="LightCoral"/>


    <!--Task Importance Colors-->
    <!--Low Importance-->
    <SolidColorBrush x:Key="Importance.Low" Color="Green"/> 
    <!--Medium Importance-->
    <SolidColorBrush x:Key="Importance.Medium" Color="Blue"/>
    <!--High Importance-->
    <SolidColorBrush x:Key="Importance.High" Color="Yellow"/> 
    <!--Critical Importance-->
    <SolidColorBrush x:Key="Importance.Critical" Color="Red"/>

    <!--Task State Colors-->
    <!--Task in progress-->
    <SolidColorBrush x:Key="Progress.InProgress" Color="Green"/>
        <!--Task completed-->
    <SolidColorBrush x:Key="Progress.Completed" Color="BlueViolet"/>
    <!--Task not started-->
    <SolidColorBrush x:Key="Progress.NotStarted" Color="#FFB1B1B1"/>
    <!--Task late-->
    <SolidColorBrush x:Key="Progress.Late" Color="Pink"/>
    <!--Task archived-->
    <SolidColorBrush x:Key="Progress.Archived" Color="Orange"/>
    <!--Task Deleted-->
    <SolidColorBrush x:Key="Progress.Deleted" Color="#FF606060"/>

    <!--Task Category Colors-->
    <!--Work task-->
    <SolidColorBrush x:Key="Category.work" Color="#FF518657"/>

</ResourceDictionary>